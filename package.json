{
  "name": "@hopeandsauced/coherence-mcp",
  "version": "0.2.0",
  "description": "MCP server that surfaces coherence, governance, and safety primitives: Wave/Bump validation, ATOM trail + gates, .context.yaml packing, AWI intent scaffolding, cross-AI collaboration (@grok), and docs/search across the SpiralSafe corpus.",
  "type": "module",
  "bin": {
    "coherence-mcp": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolate28/coherence-mcp.git"
  },
  "homepage": "https://spiralsafe.org",
  "bugs": {
    "url": "https://github.com/toolate28/coherence-mcp/issues"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "bench": "python3 scripts/benchmark.py",
    "bench:chaos": "python3 scripts/benchmark.py --iterations 10 --chaos-mode",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "coherence",
    "governance",
    "safety",
    "spiralsafe",
    "grok",
    "multi-agent",
    "wave-protocol"
