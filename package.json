    "@modelcontextprotocol/sdk": "^1.25.2",
    "ajv": "^8.12.0",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.2",
    "graph-data-structure": "^4.5.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "yaml": "^2.3.4"
  },
